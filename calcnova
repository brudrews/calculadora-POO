	        	System.out.println("digite o segundo numero:");
	        	num2 = sc.nextDouble();
	        	
	        	double subtracao = x.subtracao(num1,num2);

	        	System.out.println("o resultado eh:" +subtracao);
	        }else if (menu == 3){
	        	Conta x = new Conta();
	        	System.out.println("digite o primeiro numero:");
	        	num1 = sc.nextDouble();
	        	System.out.println("digite o segundo numero:");
	        	num2 = sc.nextDouble();
	        	
	        	double multiplicacao = x.multiplicacao(num1,num2);

	        	System.out.println("o resultado eh:" +multiplicacao);
	        }else if (menu == 4){
	        	Conta x = new Conta();
	        	System.out.println("digite o primeiro numero:");
	        	num1 = sc.nextDouble();
	        	System.out.println("digite o segundo numero:");
	        	num2 = sc.nextDouble();
	        	
